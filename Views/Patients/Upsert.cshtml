@{
    ViewData["Title"] = "Upsert";
}

@model eDoc.Models.Patient

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edit" : "Create") Patients</h2>

<div class="border container" style="padding: 30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Doc_Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Doc_Name" class="form-control" />
                <span asp-validation-for="Doc_Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Date"></label>
            </div>
            <div class="col-6">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Illness"></label>
            </div>
            <div class="col-6">
                <input asp-for="Illness" class="form-control" />
                <span asp-validation-for="Illness" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Medicines"></label>
            </div>
            <div class="col-6">
                <input asp-for="Medicines" class="form-control" />
                <span asp-validation-for="Medicines" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id!=0 ? "Update" : "Create")
                </button> 
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}